{
  "name": "PDF to HTML Converter",
  "short_name": "PDF2HTML",
  "description": "PDFからHTMLを生成するAI搭載コンバーター",
  "start_url": "pdf2html/index.html",
  "display": "standalone",
  "background_color": "#ffffff",
  "theme_color": "#007bff",
  "share_target": {
    "action": "/share-target",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "files": [
        {
          "name": "file",
          "accept": ["application/pdf", ".pdf"]
        }
      ]
    }
  },
  "icons": [
    {
      "src": "icon-500.png",
      "sizes": "500x500",
      "type": "image/png",
      "purpose": "any maskable"
    }
  ]
}